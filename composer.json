{
  "name": "ucraft-com/kafka-producer",
  "description": "Package for producing messages into Kafka topics.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Uc\\KafkaProducer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Uc\\KafkaProducer\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Uc\\KafkaProducer\\KafkaProducerServiceProvider"
      ]
    }
  },
  "authors": [
    {
      "name": "Tigran Mesropyan",
      "email": "tiko@ucraft.com"
    }
  ],
  "minimum-stability": "dev",
  "require-dev": {
    "orchestra/testbench": "^9.0",
    "phpunit/phpunit": "^11.0",
    "mockery/mockery": "^1.5"
  },
  "require": {
    "php": ">=8.2",
    "ext-pcntl": "*",
    "ext-rdkafka": "*",
    "symfony/serializer": "^7.0",
    "symfony/property-access": "7.0"
  }
}
